doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        title TheZoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 TheZoom
        main
            div#welcome
                form
                    input#nickName(placeholder="nickname", required, type="text" name="nickname")
                    input#roomName(placeholder="room name", required, type="text" name="roomname")
                    button Enter Room
                h4 Open Rooms:
                ul
            div#room
                h3
                ul
                form#name
                    h3 현재 닉네임 :
                    input(placeholder="Nickname" requied,type="text")
                    button Change
                form#msg
                    input(placeholder="message", required, type="text")
                    button Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/index.js")
